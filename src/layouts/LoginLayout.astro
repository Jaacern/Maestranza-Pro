---
// Layout específico para la página de login
export interface Props {
	title?: string;
}

const { title = "Login - Maestranzas Unidos S.A." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
	<script src="https://cdn.tailwindcss.com"></script>
	<style>
		@keyframes gradient {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}
		.animated-gradient {
			background: linear-gradient(-45deg, #1e3a8a, #374151, #6b7280, #4b5563);
			background-size: 400% 400%;
			animation: gradient 15s ease infinite;
		}
		.role-card {
			transition: all 0.3s ease;
			cursor: pointer;
		}
		.role-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		}
		.role-card.selected {
			border-color: #3b82f6;
			background-color: #eff6ff;
			transform: translateY(-5px);
		}
		.dark .role-card.selected {
			background-color: #1e3a8a;
			border-color: #60a5fa;
		}
		.fade-in {
			animation: fadeIn 0.5s ease-in;
		}
		@keyframes fadeIn {
			from { opacity: 0; transform: translateY(20px); }
			to { opacity: 1; transform: translateY(0); }
		}
	</style>
</head>
<body class="animated-gradient min-h-screen flex items-center justify-center p-4">
	<div class="w-full max-w-6xl">
		<!-- Header -->
		<div class="text-center mb-8">
			<div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-sm rounded-full mb-4">
				<svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
				</svg>
			</div>
			<h1 class="text-4xl font-bold text-white mb-2">Maestranzas Unidos S.A.</h1>
			<p class="text-white/80 text-lg">Sistema de Gestión de Inventario</p>
		</div>

		<!-- Contenedor Principal -->
		<div class="bg-white/10 backdrop-blur-md rounded-2xl shadow-2xl p-8 border border-white/20">
			<slot />
		</div>

		<!-- Footer -->
		<div class="text-center mt-8">
			<p class="text-white/60 text-sm">© 2024 Maestranzas Unidos S.A. - Sistema de Gestión de Inventario</p>
		</div>
	</div>
</body>
</html> 