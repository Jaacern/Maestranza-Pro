									<th scope="col" class="px-6 py-3">Lote</th>
									<th scope="col" class="px-6 py-3">Fecha Vencimiento</th>
									<th scope="col" class="px-6 py-3">Días Restantes</th>
									<th scope="col" class="px-6 py-3">Stock</th>
									<th scope="col" class="px-6 py-3">Acciones</th>
								</tr>
							</thead>
							<tbody>
								{warningProducts.map((product) => (
									<tr class="border-b border-yellow-200 dark:border-yellow-700">
										<td class="px-6 py-4 font-medium">{product.name}</td>
										<td class="px-6 py-4">{product.lote}</td>
										<td class="px-6 py-4">{new Date(product.vencimiento).toLocaleDateString('es-CL')}</td>
