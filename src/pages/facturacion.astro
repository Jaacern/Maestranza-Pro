---
import LayoutSidebar from '../app/LayoutSidebar.astro';

// Datos de ejemplo para facturación
const billingData = {
	totalBilled: 18500000,
	totalPaid: 17200000,
	pendingAmount: 1300000,
	overdueAmount: 450000,
	invoices: [
		{
			id: "FAC-2024-001",
			customer: "Minera Escondida",
			amount: 1250000,
			status: "pagada",
			dueDate: "2024-01-10",
			issueDate: "2024-01-01",
			items: 5,
			tax: 237500
		},
		{
			id: "FAC-2024-002",
			customer: "Codelco Norte",
			amount: 980000,
			status: "pendiente",
			dueDate: "2024-01-20",
			issueDate: "2024-01-05",
			items: 3,
			tax: 186200
		},
		{
			id: "FAC-2024-003",
			customer: "Minera Collahuasi",
			amount: 850000,
			status: "vencida",
			dueDate: "2024-01-05",
			issueDate: "2023-12-20",
			items: 2,
			tax: 161500
		},
		{
			id: "FAC-2024-004",
			customer: "Minera Los Pelambres",
			amount: 720000,
			status: "pagada",
			dueDate: "2024-01-15",
			issueDate: "2024-01-01",
			items: 4,
			tax: 136800
		},
		{
			id: "FAC-2024-005",
			customer: "Minera Centinela",
			amount: 650000,
			status: "pendiente",
			dueDate: "2024-01-25",
			issueDate: "2024-01-10",
			items: 8,
			tax: 123500
		}
	],
	payments: [
		{
			id: "PAY-2024-001",
			invoiceId: "FAC-2024-001",
			amount: 1250000,
			method: "transferencia",
			date: "2024-01-08",
			status: "confirmado"
		},
		{
			id: "PAY-2024-002",
			invoiceId: "FAC-2024-004",
			amount: 720000,
			method: "cheque",
			date: "2024-01-12",
			status: "confirmado"
		},
		{
			id: "PAY-2024-003",
			invoiceId: "FAC-2024-003",
			amount: 400000,
			method: "transferencia",
			date: "2024-01-15",
			status: "pendiente"
		}
	]
};

const monthlyRevenue = [
	{ month: "Ene", billed: 1200000, paid: 1100000 },
	{ month: "Feb", billed: 1350000, paid: 1250000 },
	{ month: "Mar", billed: 1100000, paid: 1000000 },
	{ month: "Abr", billed: 1450000, paid: 1400000 },
	{ month: "May", billed: 1300000, paid: 1200000 },
	{ month: "Jun", billed: 1600000, paid: 1550000 },
	{ month: "Jul", billed: 1400000, paid: 1350000 },
	{ month: "Ago", billed: 1550000, paid: 1500000 },
	{ month: "Sep", billed: 1700000, paid: 1650000 },
	{ month: "Oct", billed: 1650000, paid: 1600000 },
	{ month: "Nov", billed: 1800000, paid: 1750000 },
	{ month: "Dic", billed: 1542000, paid: 1500000 }
];
---

<LayoutSidebar>
	<div class="px-4 pt-6">
		<!-- Header -->
		<div class="mb-6">
			<nav class="flex mb-5" aria-label="Breadcrumb">
				<ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
					<li class="inline-flex items-center">
						<a href="/" class="inline-flex items-center text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-white">
							<svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20">
								<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
							</svg>
							Inicio
						</a>
					</li>
					<li>
						<div class="flex items-center">
							<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
							</svg>
							<span class="ml-1 text-gray-400 md:ml-2 dark:text-gray-500">Facturación</span>
						</div>
					</li>
				</ol>
			</nav>
			<div class="flex items-center justify-between">
				<div>
					<h1 class="text-2xl font-bold text-gray-900 dark:text-white">
						Panel de Facturación
					</h1>
					<p class="text-gray-600 dark:text-gray-400">
						Gestión de facturas, pagos y cobranzas
					</p>
				</div>
				<div class="flex space-x-2">
					<button class="px-4 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
						Nueva Factura
					</button>
					<button class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-primary-300 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700">
						Registrar Pago
					</button>
				</div>
			</div>
		</div>

		<!-- Métricas principales -->
		<div class="grid grid-cols-1 gap-4 mb-6 sm:grid-cols-2 lg:grid-cols-4">
			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							${(billingData.totalBilled / 1000000).toFixed(1)}M
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Total Facturado
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-blue-500 bg-blue-100 rounded-lg dark:bg-blue-800 dark:text-blue-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							${(billingData.totalPaid / 1000000).toFixed(1)}M
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Total Cobrado
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-yellow-500 bg-yellow-100 rounded-lg dark:bg-yellow-800 dark:text-yellow-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							${(billingData.pendingAmount / 1000).toFixed(0)}K
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Pendiente
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg dark:bg-red-800 dark:text-red-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							${(billingData.overdueAmount / 1000).toFixed(0)}K
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Vencido
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Gráfico de ingresos -->
		<div class="grid grid-cols-1 gap-6 mb-6 lg:grid-cols-2">
			<div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Ingresos Mensuales
				</h3>
				<div class="h-64 flex items-end justify-between space-x-2">
					{monthlyRevenue.map((data, index) => (
						<div class="flex-1 flex flex-col items-center">
							<div class="w-full flex flex-col space-y-1">
								<div 
									class="w-full bg-green-500 rounded-t"
									style={`height: ${(data.paid / 1800000) * 100}px`}
								></div>
								<div 
									class="w-full bg-blue-500 rounded-t"
									style={`height: ${(data.billed / 1800000) * 100}px`}
								></div>
							</div>
							<span class="text-xs text-gray-600 dark:text-gray-400 mt-2">
								{data.month}
							</span>
						</div>
					))}
				</div>
				<div class="mt-4 flex justify-center space-x-4">
					<div class="flex items-center">
						<div class="w-3 h-3 bg-green-500 rounded mr-2"></div>
						<span class="text-xs text-gray-600 dark:text-gray-400">Cobrado</span>
					</div>
					<div class="flex items-center">
						<div class="w-3 h-3 bg-blue-500 rounded mr-2"></div>
						<span class="text-xs text-gray-600 dark:text-gray-400">Facturado</span>
					</div>
				</div>
			</div>

			<!-- Resumen de pagos -->
			<div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Últimos Pagos
				</h3>
				<div class="space-y-4">
					{billingData.payments.map((payment) => (
						<div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
							<div>
								<p class="text-sm font-medium text-gray-900 dark:text-white">
									{payment.invoiceId}
								</p>
								<p class="text-xs text-gray-600 dark:text-gray-400">
									{new Date(payment.date).toLocaleDateString('es-CL')} - {payment.method}
								</p>
							</div>
							<div class="text-right">
								<p class="text-sm font-semibold text-gray-900 dark:text-white">
									${(payment.amount / 1000).toFixed(0)}K
								</p>
								<span class={`inline-flex items-center px-2 py-1 text-xs font-semibold rounded ${
									payment.status === 'confirmado' 
										? 'text-green-800 bg-green-200 dark:bg-green-700 dark:text-green-100'
										: 'text-yellow-800 bg-yellow-200 dark:bg-yellow-700 dark:text-yellow-100'
								}`}>
									{payment.status === 'confirmado' ? 'Confirmado' : 'Pendiente'}
								</span>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>

		<!-- Tabla de facturas -->
		<div class="bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
			<div class="p-6">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Facturas Recientes
				</h3>
				
				<div class="overflow-x-auto">
					<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
						<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
							<tr>
								<th class="px-6 py-3">ID Factura</th>
								<th class="px-6 py-3">Cliente</th>
								<th class="px-6 py-3">Monto</th>
								<th class="px-6 py-3">Estado</th>
								<th class="px-6 py-3">Fecha Emisión</th>
								<th class="px-6 py-3">Vencimiento</th>
								<th class="px-6 py-3">Items</th>
								<th class="px-6 py-3">Acciones</th>
							</tr>
						</thead>
						<tbody>
							{billingData.invoices.map((invoice) => (
								<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
									<td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
										{invoice.id}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{invoice.customer}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										<div>
											<span class="font-semibold">${(invoice.amount / 1000).toFixed(0)}K</span>
											<p class="text-xs text-gray-500">+ IVA: ${(invoice.tax / 1000).toFixed(0)}K</p>
										</div>
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										<span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
											invoice.status === 'pagada' 
												? 'text-green-800 bg-green-100 dark:bg-green-700 dark:text-green-100'
												: invoice.status === 'pendiente'
												? 'text-yellow-800 bg-yellow-100 dark:bg-yellow-700 dark:text-yellow-100'
												: 'text-red-800 bg-red-100 dark:bg-red-700 dark:text-red-100'
										}`}>
											{invoice.status === 'pagada' ? 'Pagada' : 
											 invoice.status === 'pendiente' ? 'Pendiente' : 'Vencida'}
										</span>
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{new Date(invoice.issueDate).toLocaleDateString('es-CL')}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{new Date(invoice.dueDate).toLocaleDateString('es-CL')}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{invoice.items}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										<div class="flex space-x-2">
											<button class="text-primary-600 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-400">
												Ver
											</button>
											<button class="text-green-600 hover:text-green-900 dark:text-green-500 dark:hover:text-green-400">
												PDF
											</button>
										</div>
									</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</LayoutSidebar> 