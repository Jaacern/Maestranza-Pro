	<script>
		// Funcionalidad de selección de rol
		const roleCards = document.querySelectorAll('.role-card');
		const roleSelection = document.getElementById('roleSelection');
		const loginForm = document.getElementById('loginForm');
		const selectedRoleInput = document.getElementById('selectedRole');
		const backToRolesBtn = document.getElementById('backToRoles');

		roleCards.forEach(card => {
			card.addEventListener('click', function() {
				const role = this.dataset.role;
				selectedRoleInput.value = role;
				
				// Ocultar selección de roles y mostrar formulario
				roleSelection.classList.add('hidden');
				loginForm.classList.remove('hidden');
				
				// Agregar animación de entrada
				loginForm.classList.add('fade-in');
			});
		});

		backToRolesBtn.addEventListener('click', function() {
			// Mostrar selección de roles y ocultar formulario
			roleSelection.classList.remove('hidden');
			loginForm.classList.add('hidden');
			loginForm.classList.remove('fade-in');
			
			// Limpiar formulario
			document.getElementById('username').value = '';
			document.getElementById('password').value = '';
			selectedRoleInput.value = '';
		});

		// Efectos hover en las tarjetas de rol
		roleCards.forEach(card => {
			card.addEventListener('mouseenter', function() {
				this.classList.add('selected');
			});
			
			card.addEventListener('mouseleave', function() {
				this.classList.remove('selected');
			});
		});
	</script>
</LoginLayout>
