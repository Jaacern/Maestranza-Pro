		phone: "+56 2 2345 6789",
		address: "Av. Providencia 1234, Santiago",
		category: "Rodamientos",
		rating: 4.8,
		status: "activo"
	},
	{
		id: 2,
		name: "Parker Hannifin",
		contact: "María González",
		email: "maria.gonzalez@parker.cl",
		phone: "+56 2 3456 7890",
		address: "Las Condes 567, Santiago",
		category: "Hidráulica",
		rating: 4.6,
		status: "activo"
	},
	{
