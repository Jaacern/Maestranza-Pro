		email: "pedro.herrera@prysmian.cl",
		phone: "+56 2 6789 0123",
		address: "Providencia 456, Santiago",
		category: "Cables",
		rating: 4.4,
		status: "activo"
	},
	{
		id: 6,
		name: "Bosch Rexroth",
		contact: "Carmen López",
		email: "carmen.lopez@bosch.cl",
		phone: "+56 2 7890 1234",
		address: "Las Condes 789, Santiago",
		category: "Hidráulica",
		rating: 4.9,
		status: "activo"
	}
