---
import LayoutSidebar from '../app/LayoutSidebar.astro';

// Datos específicos para usuarios finales
const usuarioFinalData = {
	userStats: {
		totalRegistrations: 156,
		monthlyRegistrations: 23,
		pendingApprovals: 5,
		approvedItems: 151
	},
	recentRegistrations: [
		{
			id: "REG-2024-001",
			item: "Rodamiento SKF 6205",
			category: "Repuestos Mecánicos",
			quantity: 10,
			status: "aprobado",
			date: "2024-01-15T14:30:00Z",
			location: "Bodega Principal"
		},
		{
			id: "REG-2024-002",
			item: "Aceite Mobil 1 5W-30",
			category: "Lubricantes",
			quantity: 20,
			status: "pendiente",
			date: "2024-01-15T12:15:00Z",
			location: "Bodega Secundaria"
		},
		{
			id: "REG-2024-003",
			item: "Filtro de Aire Industrial",
			category: "Filtros",
			quantity: 15,
			status: "en_revision",
			date: "2024-01-15T10:45:00Z",
			location: "Bodega de Repuestos"
		}
	],
	popularCategories: [
		{ category: "Repuestos Mecánicos", count: 45, percentage: 28.8 },
		{ category: "Lubricantes", count: 32, percentage: 20.5 },
		{ category: "Filtros", count: 28, percentage: 17.9 },
		{ category: "Herramientas", count: 25, percentage: 16.0 },
		{ category: "Equipos Eléctricos", count: 26, percentage: 16.8 }
	],
	registrationTrend: [
		{ month: "Ene", registrations: 18 },
		{ month: "Feb", registrations: 22 },
		{ month: "Mar", registrations: 25 },
		{ month: "Abr", registrations: 20 },
		{ month: "May", registrations: 28 },
		{ month: "Jun", registrations: 30 },
		{ month: "Jul", registrations: 26 },
		{ month: "Ago", registrations: 32 },
		{ month: "Sep", registrations: 29 },
		{ month: "Oct", registrations: 35 },
		{ month: "Nov", registrations: 31 },
		{ month: "Dic", registrations: 27 }
	]
};
---

<LayoutSidebar>
	<div class="px-4 pt-6">
		<!-- Header -->
		<div class="mb-6">
			<nav class="flex mb-5" aria-label="Breadcrumb">
				<ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
					<li class="inline-flex items-center">
						<a href="/" class="inline-flex items-center text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-white">
							<svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20">
								<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
							</svg>
							Inicio
						</a>
					</li>
					<li>
						<div class="flex items-center">
							<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
							</svg>
							<span class="ml-1 text-gray-400 md:ml-2 dark:text-gray-500">Dashboard Usuario</span>
						</div>
					</li>
				</ol>
			</nav>
			<div class="flex items-center justify-between">
				<div>
					<h1 class="text-2xl font-bold text-gray-900 dark:text-white">
						Panel de Usuario Final
					</h1>
					<p class="text-gray-600 dark:text-gray-400">
						Registro de inventario y seguimiento de solicitudes
					</p>
				</div>
				<div class="flex space-x-2">
					<a href="/inventory-registration" class="px-4 py-2 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
						Nuevo Registro
					</a>
					<a href="/inventory-tracking" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-primary-300 dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700">
						Rastrear Items
					</a>
				</div>
			</div>
		</div>

		<!-- Métricas de Usuario -->
		<div class="grid grid-cols-1 gap-4 mb-6 sm:grid-cols-2 lg:grid-cols-4">
			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-blue-500 bg-blue-100 rounded-lg dark:bg-blue-800 dark:text-blue-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							{usuarioFinalData.userStats.totalRegistrations}
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Total Registros
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							{usuarioFinalData.userStats.approvedItems}
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Aprobados
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-yellow-500 bg-yellow-100 rounded-lg dark:bg-yellow-800 dark:text-yellow-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							{usuarioFinalData.userStats.pendingApprovals}
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Pendientes
						</p>
					</div>
				</div>
			</div>

			<div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<div class="flex items-center">
					<div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-purple-500 bg-purple-100 rounded-lg dark:bg-purple-800 dark:text-purple-200">
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
						</svg>
					</div>
					<div class="ml-4">
						<span class="text-2xl font-bold leading-none text-gray-900 dark:text-white">
							{usuarioFinalData.userStats.monthlyRegistrations}
						</span>
						<p class="text-base font-normal text-gray-600 dark:text-gray-400">
							Este Mes
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Gráficos y Estadísticas -->
		<div class="grid grid-cols-1 gap-6 mb-6 lg:grid-cols-2">
			<!-- Tendencia de Registros -->
			<div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Tendencia de Registros Mensual
				</h3>
				<div class="h-64 flex items-end justify-between space-x-2">
					{usuarioFinalData.registrationTrend.map((data, index) => (
						<div class="flex-1 flex flex-col items-center">
							<div 
								class="w-full bg-blue-500 rounded-t"
								style={`height: ${(data.registrations / 40) * 100}px`}
							></div>
							<span class="text-xs text-gray-600 dark:text-gray-400 mt-2">
								{data.month}
							</span>
						</div>
					))}
				</div>
				<div class="mt-4 text-center">
					<span class="text-sm text-gray-600 dark:text-gray-400">
						Promedio mensual: {Math.round(usuarioFinalData.registrationTrend.reduce((sum, item) => sum + item.registrations, 0) / 12)} registros
					</span>
				</div>
			</div>

			<!-- Categorías Populares -->
			<div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Categorías Más Registradas
				</h3>
				<div class="space-y-4">
					{usuarioFinalData.popularCategories.map((category, index) => (
						<div class="flex items-center justify-between">
							<div class="flex items-center">
								<div class={`w-3 h-3 rounded-full mr-3 ${
									index === 0 ? 'bg-blue-500' :
									index === 1 ? 'bg-green-500' :
									index === 2 ? 'bg-yellow-500' :
									index === 3 ? 'bg-purple-500' : 'bg-red-500'
								}`}></div>
								<span class="text-sm text-gray-900 dark:text-white">
									{category.category}
								</span>
							</div>
							<div class="flex items-center space-x-2">
								<span class="text-sm font-medium text-gray-900 dark:text-white">
									{category.count}
								</span>
								<span class="text-xs text-gray-600 dark:text-gray-400">
									({category.percentage}%)
								</span>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>

		<!-- Registros Recientes -->
		<div class="bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
			<div class="p-6">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Registros Recientes
				</h3>
				
				<div class="overflow-x-auto">
					<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
						<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
							<tr>
								<th class="px-6 py-3">ID Registro</th>
								<th class="px-6 py-3">Item</th>
								<th class="px-6 py-3">Categoría</th>
								<th class="px-6 py-3">Cantidad</th>
								<th class="px-6 py-3">Ubicación</th>
								<th class="px-6 py-3">Estado</th>
								<th class="px-6 py-3">Fecha</th>
								<th class="px-6 py-3">Acciones</th>
							</tr>
						</thead>
						<tbody>
							{usuarioFinalData.recentRegistrations.map((registration) => (
								<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
									<td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
										{registration.id}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{registration.item}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{registration.category}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{registration.quantity}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{registration.location}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										<span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
											registration.status === 'aprobado' 
												? 'text-green-800 bg-green-100 dark:bg-green-700 dark:text-green-100'
												: registration.status === 'pendiente'
												? 'text-yellow-800 bg-yellow-100 dark:bg-yellow-700 dark:text-yellow-100'
												: 'text-blue-800 bg-blue-100 dark:bg-blue-700 dark:text-blue-100'
										}`}>
											{registration.status === 'aprobado' ? 'Aprobado' : 
											 registration.status === 'pendiente' ? 'Pendiente' : 'En Revisión'}
										</span>
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{new Date(registration.date).toLocaleDateString('es-CL')}
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										<div class="flex space-x-2">
											<button class="text-primary-600 hover:text-primary-900 dark:text-primary-500 dark:hover:text-primary-400">
												Ver
											</button>
											<button class="text-green-600 hover:text-green-900 dark:text-green-500 dark:hover:text-green-400">
												Editar
											</button>
										</div>
									</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<!-- Acciones Rápidas -->
		<div class="mt-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 dark:bg-gray-800">
			<div class="p-6">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
					Acciones de Usuario
				</h3>
				
				<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
					<a href="/inventory-registration" class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-700">
						<div class="flex items-center">
							<svg class="w-8 h-8 text-blue-600 dark:text-blue-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
							</svg>
							<div>
								<h4 class="text-sm font-medium text-gray-900 dark:text-white">Nuevo Registro</h4>
								<p class="text-xs text-gray-600 dark:text-gray-400">Registrar item</p>
							</div>
						</div>
					</a>
					
					<a href="/inventory-tracking" class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-700">
						<div class="flex items-center">
							<svg class="w-8 h-8 text-green-600 dark:text-green-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
							</svg>
							<div>
								<h4 class="text-sm font-medium text-gray-900 dark:text-white">Rastrear Items</h4>
								<p class="text-xs text-gray-600 dark:text-gray-400">Buscar inventario</p>
							</div>
						</div>
					</a>
					
					<a href="/low-stock-alerts" class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-700">
						<div class="flex items-center">
							<svg class="w-8 h-8 text-purple-600 dark:text-purple-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
							</svg>
							<div>
								<h4 class="text-sm font-medium text-gray-900 dark:text-white">Alertas</h4>
								<p class="text-xs text-gray-600 dark:text-gray-400">Stock bajo</p>
							</div>
						</div>
					</a>
					
					<a href="/dashboard" class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-700">
						<div class="flex items-center">
							<svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
								<path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
							</svg>
							<div>
								<h4 class="text-sm font-medium text-gray-900 dark:text-white">Dashboard</h4>
								<p class="text-xs text-gray-600 dark:text-gray-400">Vista general</p>
							</div>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</LayoutSidebar> 